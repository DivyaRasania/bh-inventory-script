#!/bin/bash

echo "---Device Name---"
cat /sys/class/dmi/id/product_name
echo

echo "---Serial Number---"
cat /sys/class/dmi/id/product_serial
echo

echo "---CPU---"
grep "model name" /proc/cpuinfo | uniq
echo

echo "---RAM Size---"
free --si -h
echo

echo "---Storage---"
lsblk
echo

echo "---GPU---"
lspci | grep -i 'vga\|3d'
echo

echo "---Screen Size---"
xrandr | grep " connected"
echo

echo "---Battery Health---"
upower -i $(upower -e) | grep -i "capacity:"
echo
